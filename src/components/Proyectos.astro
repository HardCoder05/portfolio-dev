---
//import NextJS from "./icons/NextJS.astro";
import Tailwind from "./Icons/Technologies/Tailwind.astro";
import GithubIcon from "./Icons/Social Media/Github.astro";
import Preview from "../components/Icons/Link.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: Tailwind,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "LOREM IPSUM DOLOR SIT AMET",
    description:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam auctor, nunc nec ultricies.",
    link: "#",
    github: "#",
    image: "/",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ image, title, description, link, github,tags }) => (
    <article class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-28" data-aos="zoom-in-up" data-aos-duration="1000">
      <img
        class="rounded shadow-2xl shadow-white/10 max-w-xs md:max-w-lg lg:max-w-[400px] h-40 md:h-56 lg:h-64 mt-2"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
      <div>
        <h3 class="text-xl lg:text-2xl font-semibold text-blue-500 mb-2">
          {title}
        </h3>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <p class="text-sm lg:text-base text-pretty text-white">{description}</p>

        <div class="flex flex-row gap-x-5">
          <div class="w-44 h-20 flex items-center cursor-pointer">
            <a href = {github} target="_blank" rel="noopener noreferrer">
              <div
                class="relative inline-flex items-center justify-start py-3 pl-4 pr-12 overflow-hidden font-semibold shadow 
            text-indigo-600 transition-all duration-150 ease-in-out rounded hover:pl-10 hover:pr-6 bg-gray-200 group"
              >
                <span
                  class="absolute bottom-0 left-0 w-full h-1 transition-all duration-150 ease-in-out bg-indigo-600 
                        group-hover:h-full"
                />
                <span class="absolute right-0 pr-4 duration-200 ease-out group-hover:translate-x-12">
                  <GithubIcon class="text-black size-5" />
                </span>
                <span class="absolute left-0 pl-2.5 -translate-x-12 group-hover:translate-x-0 ease-out duration-200">
                  <GithubIcon class="text-black size-5" />
                </span>
                <span class="relative w-full text-left transition-colors duration-200 ease-in-out group-hover:text-white">
                  Code
                </span>
              </div>
            </a>
          </div>
          <div class="w-full h-20 flex items-center cursor-pointer">
            <a href={link} target="_blank" rel="noopener noreferrer">
              <div
                class="relative inline-flex items-center justify-start py-3 pl-4 pr-12 overflow-hidden font-semibold shadow 
            text-indigo-600 transition-all duration-150 ease-in-out rounded hover:pl-10 hover:pr-6 bg-gray-200 group"
              >
                <span
                  class="absolute bottom-0 left-0 w-full h-1 transition-all duration-150 ease-in-out bg-indigo-600 
                        group-hover:h-full"
                />
                <span class="absolute right-0 pr-4 duration-200 ease-out group-hover:translate-x-12">
                  <Preview class="text-black/10 size-5" />
                </span>
                <span class="absolute left-0 pl-2.5 -translate-x-12 group-hover:translate-x-0 ease-out duration-200">
                  <Preview class="text-black size-5" />
                </span>
                <span class="relative w-full text-left transition-colors duration-200 ease-in-out group-hover:text-white">
                  Website
                </span>
              </div>
            </a>
          </div>
        </div>
      </div>
    </article>
  ))
}
