---
//import NextJS from "./icons/NextJS.astro";
import Tailwind from "../components/Icons/Tailwind.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: Tailwind,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "SVGL - A beautiful library with SVG logos",
    description:
      "Created from scratch with Next.js and Tailwind CSS. It's a library with SVG logos from the most popular brands. Optimized for SEO and performance.",
    link: "https://svgl.vercel.app/",
    github: "https://github.com/pheralb/svgl",
    image: "/intro.jpg",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article class="grid grid-cols-1 lg:grid-cols-2 gap-10">
      <img
        class="rounded shadow-2xl shadow-white/10 max-w-xs md:max-w-lg lg:max-w-[360px] mt-2"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
      <div>
        <h3 class="text-xl lg:text-2xl font-semibold text-blue-500 mb-2">
          {title}
        </h3>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <p class="text-sm lg:text-lg text-pretty text-white">{description}</p>
      </div>
    </article>
  ))
}
